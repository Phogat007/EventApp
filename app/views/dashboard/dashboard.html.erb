<body>
    <section class="body-container">
        <!-- SideBar Html Code -->
        <%= render 'layouts/side_view'%>

        <!-- Home Container Html Code -->
        <div class="home-container">
            <div class="navbar">
                <%= "Welcome" +  " #{current_user.name}" %>

    <thead>
        <tr>
            <th>S.No.</th>
            <th>Event Name</th>
            <th>Date</th>
            <th>Open</th>
        </tr>
    </thead>
    <tbody>
        <% @approved_events.each_with_index do |event, index| %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= event.name %></td>
                <td><%= event.date.strftime("%d %B %Y") %></td>

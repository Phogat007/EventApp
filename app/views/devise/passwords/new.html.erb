<div class="forgot-password-container">
 <h2 class="forgot-password-header">Forgot your password?</h2>
 <p class="forgot-password-subtitle">Enter your email to receive a password reset link.</p>

 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forgot-password-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, "Email Address", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: "form-submit-btn" %>
    </div>
 <% end %>
</div>

<%= render "devise/shared/links" %>
<!-- app/views/layouts/_alert.html.erb -->
<% if notice %>
 <div class="alert alert-success" id="notice-alert">
    <%= notice %>
      <script>
        // Use setTimeout to hide the alert after 2 seconds
        setTimeout(function() {
          var alertElement = document.getElementById("alert");
          if (alertElement) {
            alertElement.style.display = "none";
          }
        }, 2000); // 2000 milliseconds = 2 seconds
      </script>
 </div>
<% end %>

<% if alert %>
 <div class="alert alert-danger" id="alert-alert">
    <%= alert %>
      <script>
        setTimeout(function() {
          var alertElement = document.getElementById("alert");
          if (alertElement) {
            alertElement.style.display = "none";
          }
        }, 2000); // 2000 milliseconds = 2 seconds
      </script>
 </div>
<% end %>
<script>
function hideAlert(alertId) {
    var alertElement = document.getElementById(alertId);
    if (alertElement) {
        setTimeout(function() {
            alertElement.style.display = 'none';
        }, alertElement.getAttribute('data-delay'));
    }
}
</script>
